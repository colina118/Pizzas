<div class="row centered">
  <div class="col-lg-12">
    <h1>Nuevos <b> Clientes</b></h1>
    <h3>Agrega nuevos clientes</h3>
    <br>

  </div>
</div>
      <div class="col-lg-12">
        <table class="table">
          <thead>
          <tr>
            <th class="table-header">Name</th>
            <th class="table-header"> Lastname</th>
            <th class="table-header text-center"> Ver</th>
            <th class="table-header text-center"> Editar</th>
            <th class="table-header text-center"> Borrar</th>

            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @clients.each do |client| %>
              <tr>
                <td class="table-cell"><%= client.name %> </td>
                <td class="table-cell"><%= client.lastname %></td>
                <td class="table-cell text-center"><%= link_to '', client, class:"glyphicon glyphicon-eye-open" %></td>
                <td class="table-cell text-center"><%= link_to '', edit_client_path(client),  class:"glyphicon glyphicon-pencil" %></td>
                <td class="table-cell text-center"><%= link_to '', client, method: :delete, data: { confirm: 'Are you sure?' }, class:"glyphicon glyphicon-trash" %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
<%= link_to 'Nuevo cliente', new_client_path, class:"btn btn-default pull-right" %>


    </div>
  </div> <!--/ .container -->
</div>


