<section id="home" name="home"></section>
<div id="headerwrap">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-12">
        <br>
        <br>
        <h1>Informacion <b>clientes</b></h1>
        <br>
      </div>

      <div class="col-lg-2">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Name:</strong>
          <%= @client.name %>
        </p>

        <p>
          <strong>Lastname:</strong>
          <%= @client.lastname %>
        </p>

        <p>
          <strong>Phone number:</strong>
          <%= @client.phone_number %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @client.address %>
        </p>

        <%= link_to 'Editar', edit_client_path(@client), class:"btn btn-default pull-left" %>
        <%= link_to 'Regresar', clients_path, class:"btn btn-default pull-right" %>
      </div>


    </div>
  </div> <!--/ .container -->
