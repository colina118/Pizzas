<p id="notice"><%= notice %></p>

<h1>Ordenes</h1>

    <div class="col-lg-12">
      <table class="table">
        <thead>
        <tr>
          <th class="table-header">Nombre</th>
          <th class="table-header"> Apellido</th>
          <th class="table-header"> Sucursal</th>
          <th class="table-header text-center"> Ver</th>
          <th class="table-header text-center"> Borrar</th>

          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @orders.each do |order| %>
            <tr>
              <td class="table-cell"><%= order.client.name %> </td>
              <td class="table-cell"><%= order.client.lastname %></td>
              <td class="table-cell"><%= order.branch.adress %></td>
              <td class="table-cell text-center"><%= link_to '', order, class:"glyphicon glyphicon-eye-open" %></td>
              <td class="table-cell text-center"><%= link_to '', order, method: :delete, data: { confirm: 'Are you sure?' }, class:"glyphicon glyphicon-trash" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </tbody>
</table>

<br>

