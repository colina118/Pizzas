<!DOCTYPE html>
<html>
<head>
  <title>Proyecto</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Fixed navbar -->
  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="navbar-header">
      <%= link_to 'Home', '/', class: 'navbar-brand' %>
    </div>
    <div class="container">
      <% if current_user %>
        <ul class="navbar-nav nav">
          <li><%= link_to 'Pizzas', pizzas_path, class: 'navbar-link' %></li>
          <li><%= link_to 'Clientes', clients_path, class: 'navbar-link' %></li>
          <li><%= link_to 'Ordenes', orders_path, class: 'navbar-link'  %></li>
        </ul>
      <% end %>
      <ul class="navbar-nav nav navbar-right">
        <% if current_user %>
          <li><%= link_to 'Logout', '/logout', class: 'navbar-link' %></li>
        <% else %>
          <li><%= link_to 'Login', '/login', class: 'navbar-link' %></li>
          <li><%= link_to 'Create Account', '/signup', class: 'navbar-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
